<job id="step-scoped-integration-test" xmlns="https://jakarta.ee/xml/ns/jakartaee" version="2.0">
  <listeners>
    <listener ref="nablarchJobListenerExecutor">
      <properties>
        <property name="diConfigFilePath" value="integration-test/jbatch.xml" />
      </properties>
    </listener>
  </listeners>

  <step id="batchlet" next="chunk">
    <listeners>
      <listener ref="nablarchStepListenerExecutor" />
    </listeners>
    <batchlet ref="stepScopedBatchlet" />
  </step>

  <step id="chunk">
    <listeners>
      <listener ref="nablarchStepListenerExecutor" />
      <listener ref="nablarchItemWriteListenerExecutor" />
    </listeners>

    <chunk>
      <reader ref="stepScopedReader" />
      <writer ref="stepScopedWriter" />
    </chunk>
  </step>
</job>