<job id="chunk-integration-test" xmlns="https://jakarta.ee/xml/ns/jakartaee" version="2.0">
  <listeners>
    <listener ref="nablarchJobListenerExecutor">
      <properties>
        <property name="diConfigFilePath" value="integration-test/jbatch.xml" />
      </properties>
    </listener>
  </listeners>

  <step id="myStep">
    <listeners>
      <listener ref="nablarchStepListenerExecutor" />
      <listener ref="nablarchItemWriteListenerExecutor" />
    </listeners>

    <chunk item-count="10">
      <reader ref="stringReader">
        <properties>
          <property name="max" value="10" />
        </properties>
      </reader>
      <processor ref="createEntityProcessor" />
      <writer ref="operationWriter" />
    </chunk>
  </step>
</job>